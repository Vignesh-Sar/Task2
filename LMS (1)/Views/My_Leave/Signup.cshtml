@model Signup
@{
    ViewData["Title"]="Signup";
     
}
        
<section class="h-100 gradient-custom" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-xl-12">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-center">
                  
                  
                

                <form method = "Post">
                  <p> @TempData["Time"]</p>
                  <p class = "fw-bold">PLEASE SINGUP YOUR ACCOUNT</p>
                   
                    <div class="form-outline mb-4">
                    <label class="form-label fw-bold" for="form2Example11"  asp-for="UserName"  >USERNAME</label>
                    <p style="color:Red">Username Mustbe contains 8 characters include characters and numbers</p>
                    <input type ="text" id="form2Example11" class="form-control"  asp-for="UserName" />
                    
                    <span asp-validation-for="UserName" class="text-danger"></span>
                  </div>
                   <div class="form-outline mb-4">
                    <label class="form-label fw-bold" for="form2Example11"  asp-for="UserID" class="fw-bold">USER_ID</label>
                    
                    <input type ="text" id="form2Example11" class="form-control"  asp-for="UserID" />
                    
                    <span asp-validation-for="UserID" class="text-danger"></span>
                  </div>
                   
                  <div class="form-outline mb-4">
                    <label class="form-label fw-bold" for="form2Example22"  asp-for="PassWord" >PASSWORD</label>
                    <p style="color:Red">PassWord Mustbe contains 8 characters include characters numbers,special characters</p>
                    <input type="Password" id="form2Example22" class="form-control" asp-for="PassWord"  oninvalid="setCustomValidity('Atleast one Captial Letter(A),Small Letter(a),Special characters and must be contain 8 Letters ')"/>
                    <span asp-validation-for="PassWord" class="text-danger"></span>
                  </div>
                 
                  
                 
                
                 
                  <p class="mb-0" style="color:red">@ViewBag.Message</p>
                  <a asp-controller="My_Leave" asp-action="ReEnterPassWord" class="fw-bold">CHANGE YOUR PASSWORD<span class="badge">5</span></a><br>
                
                  <p>
                    
            <button type="Submit"  class="btn btn-primary btn-lg"
              style="padding-left: 2.5rem; padding-right: 2.5rem;" >SUBMIT</button>
              
             </p>
                  
               
               
               </form>
                 @section Scripts 
          {
            @{
              <Partial name = "_ValidationScriptsPartial"/>
            }
          }
                </div>

              </div>
            </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

        